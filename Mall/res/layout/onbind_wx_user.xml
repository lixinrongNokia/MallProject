<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
            android:id="@+id/bind_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="11位手机号码"
            android:inputType="phone"
            android:maxLength="11"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/sms_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="输入验证码"
                android:maxLines="1" />

        <Button
                android:id="@+id/sendSMS"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="#ff0000"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="18sp" />
    </LinearLayout>

    <EditText
            android:id="@+id/nickName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="(昵称)字母开头数字组合或纯中文"
            android:inputType="text"
            android:maxLength="10"
            tools:ignore="LabelFor" />

    <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="(密码)6-16位字母开头数字组合"
            android:inputType="textPassword"
            android:maxLength="16"
            tools:ignore="LabelFor"/>
    <EditText
            android:id="@+id/recommendPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="推荐人11位手机号码(选填)"
            android:inputType="phone"
            android:maxLength="11"/>

    <Button
            android:id="@+id/submit"
            style="@style/defaultbutton"
            android:text="绑定爱内秀" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="推荐码说明:"
            android:textColor="@color/indicatorcolor"
            android:textSize="18sp" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="推荐码就是邀请你使用爱内秀APP的人的手机号"
            android:textColor="@color/indicatorcolor" android:id="@+id/textView3"/>

</LinearLayout>