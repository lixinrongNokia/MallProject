<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:background="@color/defaultWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:padding="@dimen/android_spaces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/storedImage"
                    android:layout_width="@dimen/goddess_height"
                    android:layout_height="@dimen/goddess_height"
                    android:src="@drawable/tb_icon_home_message_icon"/>
            <TextView
                    android:id="@+id/storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/storedImage"
                    android:maxLines="1"
                    android:maxEms="15"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:text="爱内秀门店(虎门寨A8店)爱内秀门店(虎门寨A8店)"/>
            <TextView
                    android:id="@+id/orderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="订单已完成"/>
        </RelativeLayout>
        <RelativeLayout android:padding="@dimen/android_spaces"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/good_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:maxEms="15"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/goddess_height"
                    android:text="爱内秀门店(虎门寨A8店)"/>
            <TextView
                    android:id="@+id/orderAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/defaultRed"
                    android:text="￥145"/>
        </RelativeLayout>
        <RelativeLayout
                android:padding="@dimen/android_spaces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:padding="@dimen/share_radius"
                    android:id="@+id/confirmBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/defaultRed"
                    android:layout_centerVertical="true"
                    android:background="@drawable/boder"
                    android:text="确认收货"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>