<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/max_bubble_width">

    <ImageView
        android:id="@+id/personImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/description"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="@dimen/android_spaces"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nickName"
            style="@style/Header.TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高石花道" />

        <TextView
            android:id="@+id/sex_age"
            style="@style/Header.SubTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女\t27" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/color_circle_size"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/android_spaces"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:background="@drawable/ovo">

        <TextView
            android:id="@+id/thumbup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/fqy"
            android:drawableStart="@drawable/fqy"
            android:gravity="start|center"
            android:textColor="@color/defaultWhite" />

        <TextView
            android:id="@+id/tAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="+1"
            android:textColor="@color/defaultWhite"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="?android:actionBarSize"
        android:background="@drawable/header_ab_shadow" />


</FrameLayout>
