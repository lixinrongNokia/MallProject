<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent">
    <RadioGroup
            android:gravity="center"
            android:id="@+id/rfwgrp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <RadioButton
                android:id="@+id/rfw1"
                android:button="@null"
                android:background="@drawable/rfwdt1"
                android:text="自挺型"
                android:textColor="@android:color/transparent"
                android:layout_width="320dp"
                android:layout_height="180dp"/>
        <RadioButton
                android:id="@+id/rfw2"
                android:button="@null"
                android:background="@drawable/rfwdt2"
                android:text="半挺型"
                android:textColor="@android:color/transparent"
                android:layout_width="320dp"
                android:layout_height="180dp"/>
        <RadioButton
                android:id="@+id/rfw3"
                android:button="@null"
                android:background="@drawable/rfwdt3"
                android:text="下沉型"
                android:textColor="@android:color/transparent"
                android:layout_width="320dp"
                android:layout_height="180dp"/>
        <RadioButton
                android:id="@+id/rfw4"
                android:button="@null"
                android:background="@drawable/rfwdt4"
                android:text="下垂型"
                android:textColor="@android:color/transparent"
                android:layout_width="320dp"
                android:layout_height="180dp"/>
    </RadioGroup>
</ScrollView>