<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/localFileGridItemImageBorder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/albums_bg">

        <ImageView
            android:id="@+id/photoalbum_item_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="13dip"
            android:background="#767687"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <TextView
        android:id="@+id/photoalbum_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="#595757" />

</LinearLayout>
