<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_personal_not_login_bg"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/dfrbg">

            <TextView
                    android:id="@+id/accountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="当前账号:"
                    android:textColor="@color/orderlv"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,RtlHardcoded"/>

            <TextView
                    android:id="@+id/accountnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/accountText"
                    android:textColor="@color/logcolor"
                    android:textSize="18sp"
                    tools:ignore="RtlHardcoded"/>
        </RelativeLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="账户余额(元)"
                android:textColor="@color/orderlv"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded"/>

        <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="0.00"
                android:textColor="@color/orderlv"
                android:textSize="48sp"
                tools:ignore="HardcodedText,RtlHardcoded"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/dfrbg"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/rechargeable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="充值"
                    android:textColor="@color/orderlv"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"/>

            <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#dddddd"/>

            <TextView
                    android:id="@+id/withdrawal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="提现"
                    android:textColor="@color/orderlv"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"/>

            <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#dddddd"/>

            <TextView
                    android:id="@+id/bookKeeping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="消费记录"
                    android:textColor="@color/orderlv"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"/>

            <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#dddddd"/>

            <TextView
                    android:id="@+id/laundry_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="收入明细"
                    android:textColor="@color/orderlv"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultWhite"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="积分"
                android:textColor="@color/defaultGray"
                android:textSize="18sp"
                tools:ignore="HardcodedText"/>

        <TextView
                android:id="@+id/integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="0"
                android:textColor="@color/yec"
                android:textSize="36sp"
                tools:ignore="HardcodedText"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="兑换"
                    android:textColor="@color/defaultGray"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"/>

            <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#dddddd"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="明细"
                    android:textColor="@color/defaultGray"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/dfrbg">

        <TextView
                android:id="@+id/settingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="支付密码:"
                android:textColor="@color/orderlv"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded"/>

        <EditText
                android:id="@+id/settingPayCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/settingText"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="jjjjkkk"
                android:background="@android:color/transparent" />
    </RelativeLayout>

</LinearLayout>
